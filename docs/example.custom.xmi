<?xml version="1.0" encoding="UTF-8"?>
<custom:AppConfig
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:custom="http://example.org/custom"  <!-- ⚠️ trocar para o nsURI real -->
    xmi:id="_appConfig_balletswap"
    appName="Ballet Swap"
    shortName="balletswap"
    logoUrl="assets/logos/balletswap.png"
    primaryColor="#F06292"
    secondaryColor="#4A148C">

  <!-- ========== Accounts ========== -->
  <accounts
      xmi:type="custom:Accounts"
      xmi:id="_accounts_balletswap"
      localLogin="true"
      oauthLogin="true"
      phoneVerification="true"
      moderators="true"/>

  <!-- ========== Listings ========== -->
  <listings
      xmi:type="custom:Listings"
      xmi:id="_listings_balletswap"
      products="true"
      services="true"
      priceMode="true"
      exchangeMode="false"
      donationMode="false"
      expiry="true"
      variants="true"
      currency="EUR"
      minPrice="0.0"
      maxPrice="500.0"/>

  <!-- ========== Messaging ========== -->
  <messaging
      xmi:type="custom:Messaging"
      xmi:id="_messaging_balletswap"
      chat="true"
      imagesInChat="true"/>

  <!-- ========== Ratings ========== -->
  <ratings
      xmi:type="custom:Ratings"
      xmi:id="_ratings_balletswap"
      simple="false"
      bidirectional="true"/>

  <!-- ========== Payments ========== -->
  <payments
      xmi:type="custom:Payments"
      xmi:id="_payments_balletswap"
      mbway="true"
      multibanco="true"
      paypal="false"
      none="false"
      publicKey="pk_live_1234567890"
      secretRef="vault://secrets/balletswap/payments"/>

  <!-- ========== Logistics ========== -->
  <logistics
      xmi:type="custom:Logistics"
      xmi:id="_logistics_balletswap"
      inPerson="true"
      mail="true"
      locker="false"/>

  <!-- ========== Subcommunities ========== -->
  <subcommunities
      xmi:type="custom:Subcommunities"
      xmi:id="_subcommunities_balletswap"
      enabled="true"/>

  <!-- ========== AccessPolicies ========== -->
  <accessPolicies
      xmi:type="custom:AccessPolicies"
      xmi:id="_access_balletswap"
      anonymousBrowse="true"
      anonymousMessages="false"/>

</custom:AppConfig>