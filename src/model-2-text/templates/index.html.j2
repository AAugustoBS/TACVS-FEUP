<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ gui.name }}</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/components.css">
    
    <!-- Favicon -->
</head>
<body>
    <!-- App Container -->
    <div id="app">
        <!-- Navigation Bar -->
        <nav class="navbar">
            <div class="navbar-container">
                <div class="navbar-brand">
                    <span class="navbar-title">{{ gui.name }}</span>
                </div>
                
                                <div class="navbar-menu" id="navbar-menu">
                    {% set all_screens = [] %}
                    {% for module in gui.modules %}
                        {% for screen in module.screens %}
                            {% set _ = all_screens.append(screen) %}
                        {% endfor %}
                    {% endfor %}

                    {% for screen in all_screens %}
                        {% if screen.name != 'ItemDetailsScreen' %}
                        <a 
                            href="#/{{ screen.name | lower }}" 
                            class="navbar-link auth-link" 
                            data-screen="{{ screen.name }}"
                        >
                            {{ screen.name | replace('Screen', '') }}
                        </a>
                        {% endif %}
                    {% endfor %}
                    
                    <!-- === MANUAL FIX: Always include Login link === -->
                    <a 
                        href="#/loginscreen" 
                        class="navbar-link auth-link" 
                        data-screen="LoginScreen"
                    >
                        Login
                    </a>
                    <!-- =========================================== -->
                    
                    <button id="logout-btn" class="navbar-link auth-only">
                        Logout
                    </button>
                </div>
                <button class="navbar-toggle" id="navbar-toggle" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
        
        <!-- Main Content Area -->
        <main id="main-content" class="main-content">
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading...</p>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <p>&copy; 2024 {{ gui.name }}. Generated by BESSER Framework.</p>
            </div>
        </footer>
    </div>
    
    <!-- JavaScript Modules -->
    <script type="module" src="js/app.js"></script>

    <script>
        function updateAuthUI() {
            const loggedIn = localStorage.getItem("isLoggedIn") === "true";

            // Iterate over all auth links
            document.querySelectorAll(".auth-link").forEach(link => {
                const screen = link.dataset.screen;

                // Payment and related actions only when logged in
                if (["PaymentScreen", "CheckoutScreen", "StartOrderScreen", "SuggestExchangeScreen", "AddReviewScreen"].includes(screen)) {
                    link.style.display = loggedIn ? "inline-block" : "none";
                }
                // Login / SignUp only when logged out
                else if (["LoginScreen", "SignUpScreen"].includes(screen)) {
                    link.style.display = loggedIn ? "none" : "inline-block";
                }
                // Everything else always visible
                else {
                    link.style.display = "inline-block";
                }
            });

            // Logout button
            const logoutBtn = document.getElementById("logout-btn");
            if (logoutBtn) {
                logoutBtn.style.display = loggedIn ? "inline-block" : "none";
                logoutBtn.onclick = () => {
                    localStorage.setItem("isLoggedIn", "false");
                    window.location.hash = "#/loginscreen";
                    updateAuthUI();
                };
            }
        }

        document.addEventListener("DOMContentLoaded", updateAuthUI);
        window.addEventListener("hashchange", updateAuthUI);
    </script>
</body>
</html>
