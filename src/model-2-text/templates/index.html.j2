<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ app.app_name }}</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/components.css">
    
    <!-- Favicon -->
    {% if app.theme and app.theme.logo_url %}
    <link rel="icon" type="image/png" href="{{ app.theme.logo_url }}">
    {% endif %}
</head>
<body>
    <!-- App Container -->
    <div id="app">
        <!-- Navigation Bar -->
        <nav class="navbar">
            <div class="navbar-container">
                <div class="navbar-brand">
                    {% if app.theme and app.theme.logo_url %}
                    <img src="{{ app.theme.logo_url }}" alt="{{ app.app_name }} Logo" class="navbar-logo">
                    {% endif %}
                    <span class="navbar-title">{{ app.app_name }}</span>
                </div>
                
                <div class="navbar-menu" id="navbar-menu">
                    {% for screen in app.screens %}
                    {% if screen.type in ['HOME', 'DEFAULT'] and ':' not in screen.path %}
                    <a href="#{{ screen.path }}" class="navbar-link" data-route="{{ screen.path }}">
                        {{ screen.title }}
                    </a>
                    {% endif %}
                    {% endfor %}
                </div>
                
                <button class="navbar-toggle" id="navbar-toggle" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
        
        <!-- Main Content Area -->
        <main id="main-content" class="main-content">
            <!-- Dynamic content loaded here by router -->
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading...</p>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <p>&copy; 2024 {{ app.app_name }}. Generated by BESSER Framework.</p>
            </div>
        </footer>
    </div>
    
    <!-- JavaScript Modules -->
    <script type="module" src="js/app.js"></script>
</body>
</html>
