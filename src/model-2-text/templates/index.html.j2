<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ gui.name }}</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/components.css">
    
    <!-- Favicon -->
</head>
<body>
    <!-- App Container -->
    <div id="app">
        <!-- Navigation Bar -->
        <nav class="navbar">
            <div class="navbar-container">
                <div class="navbar-brand">
                    <span class="navbar-title">{{ gui.name }}</span>
                </div>
                
                <div class="navbar-menu" id="navbar-menu">
                    {% set all_screens = [] %}
                    {% for module in gui.modules %}
                        {% for screen in module.screens %}
                            {% set _ = all_screens.append(screen) %}
                        {% endfor %}
                    {% endfor %}
                    {% for screen in all_screens %}
                    <a href="#/{{ screen.name | lower }}" class="navbar-link" data-route="/{{ screen.name | lower }}">{{ screen.name }}</a>
                    {% endfor %}
                    {% if gui.features.show_logout %}
                    <button id="logout-btn" class="navbar-link">Logout</button>
                    {% endif %}
                </div>
                
                <button class="navbar-toggle" id="navbar-toggle" aria-label="Toggle menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
        
        <!-- Main Content Area -->
        <main id="main-content" class="main-content">
            <!-- Dynamic content loaded here by router -->
            <div class="loading">
                <div class="spinner"></div>
                <p>Loading...</p>
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <p>&copy; 2024 {{ gui.name }}. Generated by BESSER Framework.</p>
            </div>
        </footer>
    </div>
    
    <!-- JavaScript Modules -->
    <script type="module" src="js/app.js"></script>
</body>
</html>
