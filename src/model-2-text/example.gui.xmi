<?xml version="1.0" encoding="UTF-8"?>
<gui:AppGUI
  xmi:version="2.0"
  xmlns:xmi="http://www.omg.org/XMI"
  xmlns:gui="http://www.example.org/gui"
  appName="Ballet Swap">

  <theme
    xmi:type="gui:Theme"
    primaryColor="#F06292"
    secondaryColor="#4A148C"
    logoUrl="https://example.org/balletswap/logo.png"/>

  <!-- Home Screen -->
  <screens
    xmi:type="gui:Screen"
    xmi:id="_screen_home"
    name="Home"
    path="/"
    type="HOME"
    title="Ballet Swap">

    <components
      xmi:type="gui:ListView"
      xmi:id="_comp_home_list"
      id="home-list"
      order="1"
      entity="Item"
      showImage="true"
      showPrice="true"
      showLocation="true"
      showRating="true"/>

    <components
      xmi:type="gui:ActionButton"
      xmi:id="_comp_home_new"
      id="home-new-item"
      order="2"
      label="New Listing"
      icon="plus"
      actionType="NAVIGATE"
      targetPath="/items/new"/>
  </screens>

  <!-- Detail Screen -->
  <screens
    xmi:type="gui:Screen"
    xmi:id="_screen_detail"
    name="ItemDetail"
    path="/items/:id"
    type="DETAIL"
    title="Listing">

    <components
      xmi:type="gui:DetailView"
      xmi:id="_comp_detail_main"
      id="detail-main"
      order="1"
      entity="Item"/>

    <components
      xmi:type="gui:ActionButton"
      xmi:id="_comp_detail_chat"
      id="detail-chat"
      order="2"
      label="Chat with seller"
      icon="chat"
      actionType="NAVIGATE"
      targetPath="/chat/:conversationId"/>
  </screens>

  <!-- Chat Screen -->
  <screens
    xmi:type="gui:Screen"
    xmi:id="_screen_chat"
    name="Chat"
    path="/chat/:conversationId"
    type="CHAT"
    title="Chat">
  </screens>

</gui:AppGUI>